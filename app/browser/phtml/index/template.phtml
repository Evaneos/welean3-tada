

<script id="leveln" type="text/x-handlebars-template">
    <div class='level level{{level}} parent-id-{{parentId}}'>
        {{>task}}
        <div class='insert-children-here tasklist'></div>
        {{#if more}}
        <div data-link-id="{{id}}" style="display:none" class='level level{{plusone level}} parent-id-{{id}} more to-be-removed-{{id}}'>
            <div class="task ">
                <span class='title'>
                    <span class='editable'>loading...</span>
                </span>
            </div>
        </div>
        {{/if}}
    </div>
</script>
<script id="partial-task" type="text/x-handlebars-template">
    <div id="tada-{{id}}" class="task ">
        {{#if toolbar}}
        <div class='toolbar'>
            {{#if hasChildren}}
            <span class="plus toolbar-item "></span>
            <a href="#{{id}}" class="toolbar-item fa fa-chain"></a>
            {{/if}}
        </div>
        {{/if}}
        <span class='title'>
            <span class='editable'>{{title}}</span>
            <input placeholder="Nouvelle tache" class='inputInherit mousetrap' type="text" value="{{title}}"/>
        </span>
        <span class='description'>{{strippedDescription}}</span>
    </div>
</script>
<script id="breadcrumb-item" type="text/x-handlebars-template">
    <a href="#{{id}}" class="bc-item">{{title}}</a>
</script>